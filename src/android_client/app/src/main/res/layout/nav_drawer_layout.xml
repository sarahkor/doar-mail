<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:orientation="vertical"
    android:padding="0dp"
    android:fitsSystemWindows="true">

    <!-- Header with app logo and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="14dp"
            android:contentDescription="@string/logo_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/doarlight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mail Folders Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="16dp">

                <!-- Inbox -->
                <LinearLayout
                    android:id="@+id/nav_inbox"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_inbox"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/inbox_icon_desc"
                        app:tint="@color/nav_icon_tint" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/inbox"
                        android:textSize="14sp"
                        android:textColor="@color/nav_item_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Sent -->
                <LinearLayout
                    android:id="@+id/nav_sent"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_sent"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/nav_icon_tint"
                        android:contentDescription="@string/sent_icon_desc"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sent"
                        android:textSize="14sp"
                        android:textColor="@color/nav_item_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Drafts -->
                <LinearLayout
                    android:id="@+id/nav_drafts"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_drafts"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/nav_icon_tint"
                        android:contentDescription="@string/drafts_icon_desc"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/drafts"
                        android:textSize="14sp"
                        android:textColor="@color/nav_item_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Spam -->
                <LinearLayout
                    android:id="@+id/nav_spam"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_spam"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/nav_icon_tint"
                        android:contentDescription="@string/spam_icon_desc"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/spam"
                        android:textSize="14sp"
                        android:textColor="@color/nav_item_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Trash -->
                <LinearLayout
                    android:id="@+id/nav_trash"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_trash"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/nav_icon_tint"
                        android:contentDescription="@string/trash_icon_desc"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/trash"
                        android:textSize="14sp"
                        android:textColor="@color/nav_item_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Starred -->
                <LinearLayout
                    android:id="@+id/nav_starred"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star_outline"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/nav_icon_tint"
                        android:contentDescription="@string/starred_icon_desc"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/starred"
                        android:textSize="14sp"
                        android:textColor="@color/nav_item_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- All Doar -->
                <LinearLayout
                    android:id="@+id/nav_all_mail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_all_mail"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/nav_icon_tint"
                        android:contentDescription="@string/all_icon_desc"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/all"
                        android:textSize="14sp"
                        android:textColor="@color/nav_item_text"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- Labels Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <!-- Labels Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_label"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/nav_icon_tint"
                        android:contentDescription="@string/labels_icon_desc"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/labels"
                        android:textSize="14sp"
                        android:textColor="@color/nav_item_text"
                        android:fontFamily="sans-serif-medium" />

                    <ImageView
                        android:id="@+id/btn_add_label"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp"
                        android:src="@drawable/ic_add"
                        android:contentDescription="@string/add_btn_desc"
                        app:tint="@color/text_secondary" />

                </LinearLayout>

                <!-- Labels List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_labels"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout> 
